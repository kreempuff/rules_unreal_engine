# build --host_platform=@io_bazel_rules_dotnet//dotnet/toolchain:darwin_amd64_6.0.101 --platforms=@io_bazel_rules_dotnet//dotnet/toolchain:darwin_amd64_6.0.101

common --experimental_ui_max_stdouterr_bytes=50000000
common:ci --disk_cache=~/.cache/bazel --experimental_ui_max_stdouterr_bytes=50000000

# Remote cache configuration (bazel-remote + MinIO)
# Use --config=cache to enable (not enabled by default to avoid CI failures)
build:cache --remote_cache=grpc://localhost:9092
build:cache --remote_upload_local_results=true
build:cache --experimental_remote_downloader=grpc://localhost:9092

# Import CI-generated config (contains UE clone path)
try-import %workspace%/.bazelrc.ci
